    .container {
      display: flex;
      height: 100vh;
    }

    .left-pane, .right-pane {
      flex: 1;
      padding: 20px;
      box-sizing: border-box;
    }

    .left-pane {
      background-color: #fff;
      border-right: 1px solid #ccc;
      overflow-y: auto;
    }

    .right-pane {
      background-color: #e9f5ff;
    }

    #task-form {
      display: flex;
      flex-direction: column;
    }

    #task-input {
      padding: 10px;
      margin-bottom: 10px;
      font-size: 16px;
    }

    button {
      padding: 10px;
      font-size: 16px;
      background-color: #0078d4;
      color: white;
      border: none;
      cursor: pointer;
    }

    button:hover {
      background-color: #005fa3;
    }

    .task-item {
      display: flex;
      align-items: center;
